{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "prettier": "prettier --write packages/**/*.{js,ts,html,json,css,scss}",
    "copy-app-resources": "lerna exec --no-bail --stream --concurrency 1 -- \"cp -R ../../tools/App_Resources .\"",
    "copy-hooks": "lerna exec --no-bail --stream --concurrency 1 -- \"cp -R ../../tools/hooks .\"",
    "publish.all": "lerna exec --no-bail --stream --concurrency 1 -- \"npm publish\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.13.1",
    "husky": "^5.2.0",
    "lerna": "~3.14.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "packages/**/*.{jsx?,tsx?,html,xml,json,css,scss}": "prettier --write"
  }
}
